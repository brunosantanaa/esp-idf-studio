{
  "name": "esp-idf-studio",
  "displayName": "ESP-IDF Studio",
  "description": "A graphical tool for ESP-IDF that allows you to configure pins and peripherals (GPIO, UART, SPI, I2C, etc.) interactively. Generate initialization code automatically for your ESP chips.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "esp-idf-studio.showConfig",
        "title": "Show Module",
        "icon": "media/icon.svg"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "esp-idf-studio.showConfig"
        }
      ],
      "view/title": [
        {
          "command": "esp-idf-studio.showConfig",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "esp-idf-studio",
          "title": "ESP-IDF Studio",
          "icon": "media/icon.svg",
          "command": "esp-idf-studio.showConfig"
        }
      ]
    },
    "views": {
      "esp-idf-studio": [
        {
          "id": "esp-idf-config",
          "name": "Configuration"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch --mode development --devtool source-map",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "files": [
    "media/**/*"
  ]
}